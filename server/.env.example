# Server environment example
# Copy to .env and fill in values

PORT=5000
CLIENT_URL=http://localhost:5173
MONGO_DBURL=
SECRET_KEY=

# Firebase Admin for server token verification
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
# Replace \n with literal \n in private key
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# Email (choose ONE of the following)
# A) Gmail OAuth2
GMAIL_USER=
GMAIL_CLIENT_ID=
GMAIL_CLIENT_SECRET=
GMAIL_REFRESH_TOKEN=

# B) Generic SMTP
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_SECURE=false
SMTP_FROM="Shop <no-reply@example.com>"
