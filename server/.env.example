# Server environment example
# Copy to .env and fill in values

PORT=5000
CLIENT_URL=http://localhost:5173
MONGO_DBURL=
SECRET_KEY=

# Firebase Admin for server token verification
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
# Replace \n with literal \n in private key
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# Email (recommended: SMTP; optional SendGrid HTTP fallback)
# Transport mode: smtp | sendgrid | auto (default auto tries SMTP, falls back to SendGrid on timeout if configured)
EMAIL_TRANSPORT=auto
# SMTP (use for SendGrid/Mailgun/etc.)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_SECURE=false
SMTP_REQUIRE_TLS=true
SMTP_FROM="Shop <no-reply@example.com>"
# Optional: SendGrid HTTP fallback (no SMTP egress needed)
# SENDGRID_API_KEY=
# SENDGRID_FROM="Shop <no-reply@example.com>"
